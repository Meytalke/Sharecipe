<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="90"
                android:startColor="#A97462"
                android:endColor="#8E5A3E"/>
            <corners android:radius="25dp"/>
            <stroke android:width="3dp" android:color="#6E3C28"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:angle="90"
                android:startColor="#D5A29D"
                android:endColor="#9C7B5E"/>
            <corners android:radius="25dp"/>
            <stroke android:width="3dp" android:color="#8B5D3C"/>
            <padding android:left="16dp" android:top="10dp" android:right="16dp" android:bottom="10dp"/>
            <shadowColor android:color="#80000000" />
        </shape>
    </item>
</selector>
