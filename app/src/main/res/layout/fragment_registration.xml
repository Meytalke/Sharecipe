<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/registration"
    tools:context=".fragments.registration">
    <ImageButton
        android:id="@+id/btn_back_reg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_back"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp"
        android:scaleType="centerInside"
        app:tint="@color/white"
        app:tintMode="src_in" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="#fff"
        android:padding="8dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="264dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/TextUserNameRegistration"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:hint=" Email"
            android:background="@drawable/edit_text_background"
            android:drawableLeft="@drawable/ic_email"
            android:padding="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="264dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/TextPasswordRegistration"
            android:layout_width="191dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_background"
            android:hint=" Password"
            android:drawableLeft="@drawable/ic_lock"
            android:inputType="textPassword"
            android:padding="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="264dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">


        <EditText
            android:id="@+id/TextRePasswordRegistration"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_background"
            android:hint=" Re-Password"
            android:drawableLeft="@drawable/ic_lock"
            android:inputType="textPassword"
            android:padding="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <EditText
            android:id="@+id/TextPhoneRegistration"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_background"
            android:hint=" Phone number"
            android:drawableLeft="@drawable/ic_phone"
            android:inputType="phone"
            android:padding="8dp" />
    </LinearLayout>

    <Button
        android:id="@+id/RegistrationButton"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:elevation="4dp"
        android:text="Register"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"/>
</LinearLayout>